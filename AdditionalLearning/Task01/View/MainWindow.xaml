<Window x:Class="Task01.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task01"
        xmlns:vm="clr-namespace:Task01.ViewModel" d:DataContext="{d:DesignInstance Type=vm:ClientsViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dynamicDataGrid"
                  AutoGenerateColumns="True"
                  ItemsSource="{Binding ViewList.View}"
                  AutoGeneratedColumns="SetDataGridHeaders"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  IsReadOnly="True"
                  CanUserSortColumns="True">
        </DataGrid>
        <StackPanel Grid.Column="1">
            <Button Content="Добавить" Command="{Binding NewItemCommand}"/>
            <Button Content="Изменить" Command="{Binding EditItemCommand}" CommandParameter="{Binding SelectedItem}"/>
            <Button Content="Удалить" Command="{Binding DeleteItemCommand}" CommandParameter="{Binding SelectedItem}"/>
        </StackPanel>
    </Grid>
</Window>
